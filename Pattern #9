#include <bits/stdc++.h>
using namespace std;

int main() 
{
    int n;
    cin>>n;
    for(int i=0;i<n;i++)
    {
      for(int j=n-i-1;j>0;j--)
      {
        cout<<" ";
      }
      
      for(int k=0;k<2*i+1;k++)
      {
        cout<<"*";
      }
      
      for(int l=n-i-1;l>0;l--)
      {
        cout<<" ";
      }
      cout<<endl;
    }
    
    for(int i=n-1;i>=0;i--)
    {
      for(int j=n;j>i+1;j--)
      {
        cout<<" ";
      }
      
      for(int k=2*i+1;k>0;k--)
      {
        cout<<"*";
      }
      
      for(int l=n;l>i+1;l--)
      {
        cout<<" ";
      }
      cout<<endl;
    }
    
}
